<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-expand-lg navbar-inverse">
      <div class="container">
      <div class="navbar-brand">Bookers</div>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to user_path(current_user), class: "my-bt" do%><i class="glyphicon glyphicon-home"></i> Homes<% end %></li>
          <li><%= link_to users_path, class: "my-bt" do%><i class="glyphicon glyphicon-user"></i> Users<% end %></li>
          <li><%= link_to books_path, class: "my-bt" do%><i class="glyphicon glyphicon-book"></i> Books<% end %></li>
          <li><%= link_to destroy_user_session_path, method: :delete, class: "my-bt" do%><i class="glyphicon glyphicon-log-out"></i> logout<% end %></li>


        <% else %>
          <li><%= link_to root_path, class: "my-bt" do%><i class="glyphicon glyphicon-home"></i> Home<% end %></li>
          <li><%= link_to home_about_path, class: "my-bt" do%><i class="glyphicon glyphicon-link"></i> About<% end %></li>
          <li><%= link_to new_user_registration_path, class: "my-bt" do%><i class="glyphicon glyphicon-edit"></i> sign up<% end %></li>
          <li><%= link_to new_user_session_path, class: "my-bt" do%><i class="glyphicon glyphicon-log-in"></i> login<% end %></li>
          <% end %>
        </ul>
      </div>
  </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
