<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<br>
			<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "80x80"%>
			<table class="table">
				<tr>
					<th>name</th>
					<th><%= @user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= @user.introduction %></th>
				</tr>
			</table>
				<%= link_to edit_user_path(@user), class: "my-bt" do%><i class="btn btn-default btn-block glyphicon glyphicon-wrench"></i><% end %>
				<h2>New book</h2>

			<%= form_for @nbook do |f| %>
			  <%= f.label :title %><br>
			  <%= f.text_field :title %><br>

			  <%= f.label :body %><br>
			  <%= f.text_area :body %>

			  <%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
			<% end %>
		</div>
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
			</thead>
			<tbody>
				<tr>
					<td><%= link_to attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", size: "40x40"), user_path(@user)%><br><%= link_to @user.name, user_path(@user) %></td>
					<td><%= link_to @book.title, book_path(@book.id) %></td>
					<td><%= @book.body %></td>
					<td><% if @book.user.id == current_user.id %>
						<%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
						<% end %>
					</td>
					<td><% if @book.user.id == current_user.id %>
						<%= link_to "Destroy", book_path(@book), method: :delite, class: "btn btn-danger" %>
						<% end %>
					</td>
				</tr>
			</tbody>
		</table>
		</div>
	</div>
</div>