<%= render 'layouts/error_messages', model: @book %>

<div class="container">
  <div class="row">
  	<div class="col-md-3"></div>
  	<div class="col-md-5">
		<h2>Editing Book</h2>

		<%= form_for @book do |f| %>
			<%= f.label :title %><br>
			<%= f.text_field :title %><br>
			<%= f.label :body %><br>
			<%= f.text_area :body %>
			<%= f.submit 'Update Book',  class: "btn btn-primary btn-block" %>
		<% end %>

		<p style="display:inline;"><%= link_to "Show", book_path %></p> | <p style="display:inline;"><%= link_to "Back", books_path %></p>

	</div>
  </div>
</div>