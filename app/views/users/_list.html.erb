<div class="col-xs-3">
			<h2>User info</h2>
			<br>
			<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "80x80"%>
			<table class="table">
				<tr>
					<th>name</th>
					<th><%= user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= user.introduction %></th>
				</tr>
			</table>
				<%= link_to edit_user_path(user), class: "my-bt" do%><i class="btn btn-default btn-block glyphicon glyphicon-wrench"></i><% end %>
				<h2>New book</h2>

			<%= form_for(@book) do |f| %>
			  <%= f.label :title %><br>
			  <%= f.text_field :title %><br>

			  <%= f.label :body %><br>
			  <%= f.text_area :body %>

			  <%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
			<% end %>
		</div>