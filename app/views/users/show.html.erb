
<div class="container">
	<div class="row">
		<%= render 'users/list', user: @user %>
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
					<% @user.books.each do |book| %>
					<tr>
						<td><%= link_to attachment_image_tag(@user, :profile_image, fallback: "no_image.jpg", size: "40x40"), user_path(@user)%></td>
						<td><%= link_to book.title,book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</thead>
			</table>
		</div>
	</div>
</div>
